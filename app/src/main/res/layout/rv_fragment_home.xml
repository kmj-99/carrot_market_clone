<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/Rv_Home_RootLayout"
    android:layout_width="0dp"
    android:layout_height="135dp"
    app:layout_constraintWidth_percent="1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <ImageView
        android:id="@+id/Rv_Home_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/bell_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintLeft_toRightOf="@id/Rv_Home_Image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:visibility="visible"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Rv_Home_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="미니 밥솥"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/Rv_Home_Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="진접읍"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/light_gray"/>
                <TextView
                    android:id="@+id/Rv_Home_Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="21초전"/>
            </LinearLayout>
            <TextView
                android:id="@+id/Rv_Home_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="30,00원"
                android:textColor="@color/black"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:visibility="visible"
            android:paddingTop="5dp"
            android:layout_gravity="right|bottom">
            <LinearLayout
                android:id="@+id/Rv_Home_ChatLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/chat_icon"/>
                <TextView
                    android:id="@+id/Rv_Home_ChatNumber"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Rv_Home_HeartLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/heart_icon"/>
                <TextView
                    android:id="@+id/Rv_Home_HeartNumber"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="10"/>
            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/light_light_gray"
        android:layout_marginBottom="15dp"
        app:layout_constraintWidth_percent="0.95"
        app:layout_constraintTop_toBottomOf="@+id/Rv_Home_RootLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>