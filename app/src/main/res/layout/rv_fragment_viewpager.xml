<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Rv_ViewPager_Image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/home_bell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/Rv_ViewPager_Image"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/Rv_ViewPager_Text_Tile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="트리플헬스드링크"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
        <TextView
            android:id="@+id/Rv_ViewPager_Text_Content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:text="오들오들 추운 날 따뜻하게 즐겨도 \n맛있는 트리플헬스드링크"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/Rv_ViewPager_Text_Tile"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/Rv_ViewPager_Text_Content"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:id="@+id/Rv_ViewPager_Text_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="진접베스트점핑다이어트"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/Rv_ViewPager_Line"
                android:layout_width="3dp"
                android:layout_height="0dp"
                android:layout_marginLeft="5dp"
                android:background="@color/light_light_gray"
                app:layout_constraintHeight_percent="1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/Rv_ViewPager_Text_Name"/>
            <TextView
                android:id="@+id/Rv_ViewPager_Text_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="진접읍"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/Rv_ViewPager_Line" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>