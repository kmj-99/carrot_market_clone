<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Around_Rv3_Layout_Major"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/layout_custom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView
            android:id="@+id/Around_Rv3_Image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/test_image"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Around_Rv3_Layout_Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@+id/Around_Rv3_Image"
            app:layout_constraintLeft_toLeftOf="parent"
            >

            <TextView
                android:id="@+id/Around_Rv3_Text_FoodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="올트릿지카페"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/Around_Rv3_line"
                android:layout_width="3dp"
                android:layout_height="3dp"
                android:background="@color/light_gray"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/Around_Rv3_Text_FoodName"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/Around_Rv3_Text_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="민송동 카페"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toRightOf="@+id/Around_Rv3_line"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/Around_Rv3_Coupon_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="올트릿지 10% 할인쿠폰"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingHorizontal="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Around_Rv3_Layout_Info"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/button_circle_shape"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintWidth_percent="0.9"
            app:layout_constraintTop_toBottomOf="@+id/Around_Rv3_Coupon_Name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:id="@+id/Around_Rv3_button_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="쿠폰받기"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/around_text_name"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/download_icon"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Around_Rv3_Receiver"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/Around_Rv3_Layout_Major"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Around_Rv3_Layout_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Around_Rv3_Image_Profile1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/profile_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Around_Rv3_Image_Profile2"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/profile_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/Around_Rv3_Image_Profile3"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:src="@drawable/profile_image"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/Around_Rv3_Text_Receivers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="외 185명이 받았어요"
            app:layout_constraintLeft_toRightOf="@+id/Around_Rv3_Layout_Image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Around_Rv3_Text_Content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_custom"
        android:padding="10dp"
        android:text="쇼핑퀸미세스초이 아이들이 우동을 좋아하는데"
        android:textSize="12sp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintTop_toBottomOf="@+id/Around_Rv3_Receiver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>