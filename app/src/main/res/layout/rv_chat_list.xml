<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Rv_Chat_List_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/Rv_Chat_List_Image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/test_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/Rv_Chat_List_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전복비빔밥"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/Rv_Chat_List_Image"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/Rv_Chat_List_Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="옥정동"
            android:textSize="11sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/light_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/Rv_Chat_List_Title"
            app:layout_constraintTop_toTopOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/light_light_gray"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@+id/Rv_Chat_List_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>