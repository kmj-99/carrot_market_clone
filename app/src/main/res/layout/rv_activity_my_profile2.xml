<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Rv_My_Profile_Layout"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/Rv_My_Profile_Text_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="활동 배지 5개"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/Rv_My_Profile_Image"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:src="@drawable/right_icon"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/Rv_My_Profile_Text_Sub"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingHorizontal="15dp"
        android:text="welkjgnherkjlg"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/Rv_My_Profile_Layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="3dp"
        android:background="@color/light_light_gray"
        app:layout_constraintWidth_percent="1"
        app:layout_constraintTop_toBottomOf="@id/Rv_My_Profile_Text_Sub"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>