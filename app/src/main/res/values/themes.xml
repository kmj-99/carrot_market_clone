    <style name="MyTimePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- dialog의 위쪽 색상 -->
        <item name="colorAccent">@color/carrot_color</item>

        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/carrot_color</item>x

