<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Template" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:itemTextAppearance">@android:color/black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- EditText 드래그 할 때 나타나는 밑에 아이콘 색상 설정-->
        <item name="colorControlActivated">@color/carrot_color</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>


    <style name="MyDatePickerStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- dialog의 위쪽 색상 -->
        <item name="colorAccent">@color/carrot_color</item>

        <!-- 취소/확인버튼 색상 -->
        <item name="android:color">@color/carrot_color</item>

